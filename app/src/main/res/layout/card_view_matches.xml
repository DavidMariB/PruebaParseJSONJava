<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/matchInfoCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/champIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/champName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/champIcon"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/matchLane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/champName"
                android:layout_toRightOf="@+id/champIcon"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/matchResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/matchLane"
                android:layout_toRightOf="@+id/champIcon"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/matchScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/champName"
                android:layout_marginLeft="70dp"
                android:textSize="15sp"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>